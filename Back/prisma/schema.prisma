generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Discentes {
  id             Int      @id @default(autoincrement())
  matricula      String   @unique
  nome           String
  cpf            String
  lates          String
  date_born      DateTime
  projetoId      Int
  tamanho_camisa String
  contato        String
  bolsista       Boolean
  projeto        Projeto  @relation(fields: [projetoId], references: [id], onDelete: Cascade)
}

model Doscentes {
  id         Int       @id @default(autoincrement())
  siape      Int       @unique
  nome       String
  email      String    @unique
  contato    String
  projetosId String
  projetos   Projeto[] @relation("DoscentesToProjeto")
}

model Projeto {
  id             Int         @id @default(autoincrement())
  titulo_projeto String
  edital         String
  area           String
  objetivo       String
  metas          String
  discentes      Discentes[]
  noticias       Noticia[]
  doscentes      Doscentes[] @relation("DoscentesToProjeto")
}

model Noticia {
  id        Int     @id @default(autoincrement())
  titulo    String
  tipo      String
  link      String
  projetoId Int
  projeto   Projeto @relation(fields: [projetoId], references: [id], onDelete: Cascade)
}
